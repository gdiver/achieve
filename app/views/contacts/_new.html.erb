<%=form_for(@contact, url: choose_new) do |f| %>
    <% if @contact.errors.any? %>
        <div id="error_explanation">
            <!--バリデーションエラーの件数を表示-->
            <h2><%=@contact.errors.count %>件のエラーがあります。</h2>
            
            <ul>
            <!--@contact.errorsは@contactをバリデーションした際のエラー情報-->
            <!--full_messagesは複数のエラーメッセージを表す-->
            <% @contact.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
            </ul>
        </div>
    <% end %>
    
    <%=f.label :名前 %>
    <%=f.text_field :name, class: 'form-control' %>
    <br>
    <%=f.label :メールアドレスemail %>
    <%=f.text_field :email, class: 'form-control' %>
    <br>
    <%=f.label :内容 %>
    <%=f.text_field :content, class: 'form-control' %>
    <br>
    <%=f.submit '投稿', class: 'btn btn-primary btn-block'  %>
<% end %>